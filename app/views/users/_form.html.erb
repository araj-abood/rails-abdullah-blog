<div class="container py-5" style="align-items: center">

  <%= render "shared/error", obj: @user %>

  <%= form_with model: @user, class: "form-group shadow-sm" do |form| %>
    <div class="form-article__label-value">
      <%= form.label :username, class: "form-article__label" %>
      <%= form.text_field :username, class: "form-control", placeholder: "Enter username" %>
    </div>
    <div class="form-article__label-value" style="margin-top: 10px">
      <%= form.label :email, class: "form-article__label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
    <div class="form-article__label-value" style="margin-top: 10px">
      <%= form.label :password, class: "form-article__label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>

    <div style="text-align: center" class="mt-5">
      <%= form.submit @user.new_record? ? "Sign up" : "Update Account", class: "btn btn-outline-primary article-form__submit" %>
    </div>
  <% end %>

</div>
