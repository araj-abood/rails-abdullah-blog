<h1 style="text-align: center; margin-top: 12px"><%= @user.username %> Profile</h1>
<p style="text-align: center"><%= @user.email %></p>

<%= gravator_for @user, options: { size: 200 } %>

<% if logged_in? && current_user.id == @user.id %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
  </div>
<% end %>

<h3 style="text-align: center; margin-top: 10px">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>


<%= render "articles/article-card", articles: @articles %>

